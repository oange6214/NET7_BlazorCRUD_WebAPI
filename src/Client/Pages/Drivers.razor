@page "/drivers"

<PageTitle>Drivers</PageTitle>

<h1>Welcome to the Drivers Section</h1>

<a href="@($"DriverDetails")" class="btn btn-success">Add New Driver</a>
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Racing Number
            </th>
            <th>
                Team
            </th>
            <th>
                Manage
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in _drivers)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.RacingNb</td>
                <td>@item.Team</td>
                <td>
                    <a href="@($"DriverDetails/{item.Id}")" class="btn btn-warning">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>